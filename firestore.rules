rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Allow updating counters if that's the only thing changing
    function isOnlyStatsUpdate() {
       return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats', 'likeCount', 'commentCount', 'followerCount', 'followingCount']);
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read public profiles
      allow read: if true;
      // Only authenticated users can create their own profile
      allow create: if isAuthenticated() && isOwner(userId);
      // User can update their own profile, OR admin can update anyone, OR anyone can update stats
      allow update: if isOwner(userId) || isAdmin() || (isAuthenticated() && isOnlyStatsUpdate());
      // Only the user can delete their own profile
      allow delete: if isOwner(userId);

      // User's pile subcollection
      match /pile/{pileId} {
        allow read, write: if isOwner(userId);
      }

      // User's saved recipes subcollection
      match /savedRecipes/{recipeId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // User's inventory subcollection
      match /inventory/{itemId} {
        allow read, write: if isOwner(userId);
      }

      // User's notifications subcollection (Phase 2)
      match /notifications/{notificationId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // User's badges subcollection
      match /earned_badges/{badgeId} {
        allow read: if true; // Allow public read so profiles show badges
        // Allow owner to write (needed for client-side badge awarding)
        allow write: if isAuthenticated() && isOwner(userId);
      }
    }

    // Projects collection
    match /projects/{projectId} {
      // ... (existing rules)
      // Read if project is public OR user is the owner
      allow read: if resource.data.isPublic == true ||
                     isOwner(resource.data.userId);
      // Only authenticated users can create projects
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      // Only the owner can update their project, OR authenticated users can update counts
      allow update: if isOwner(resource.data.userId) || (isAuthenticated() && isOnlyStatsUpdate());
      allow delete: if isOwner(resource.data.userId);

      // Project photos subcollection
      match /photos/{photoId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }

      // Project paints subcollection
      match /paints/{paintId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }

      // Project paint recipes subcollection
      match /paintRecipes/{recipeId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }

      // Project techniques subcollection
      match /techniques/{techniqueId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }

      // Project timeline subcollection
      match /timeline/{eventId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }

      // Project comments subcollection
      match /comments/{commentId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true;
        allow create: if isAuthenticated() &&
                         get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true &&
                         request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() &&
                                 resource.data.userId == request.auth.uid;
      }

      // Project recipe usages subcollection
      match /recipeUsages/{usageId} {
        allow read: if get(/databases/$(database)/documents/projects/$(projectId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data.userId);
      }
    }

    // Activities Collection (Root)
    match /activities/{activityId} {
      // Anyone can read activities (filter by visibility in query usually, but rules must allow)
      allow read: if true;
      // Allow authenticated users to create activities for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow owner to update/delete
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Global paints database
    // SECURED: Only Admins can write to the global curated list
    match /paints/{paintId} {
      allow read: if true;
      allow write: if isAdmin();
    }


    // Custom paints (user-created paints)
    match /customPaints/{paintId} {
      // Anyone can read custom paints
      allow read: if true;
      // Only authenticated users can create custom paints
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      // Only the owner can update or delete their custom paints
      allow update, delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Pile collection (top-level)
    match /pile/{pileId} {
      allow read: if isOwner(resource.data.userId);
      allow create, update: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Follows collection
    match /follows/{followId} {
      // Anyone can read follows
      allow read: if true;
      // Create if authenticated and followerId matches current user
      allow create: if isAuthenticated() &&
                       request.resource.data.followerId == request.auth.uid;
      // Delete only own follows
      allow delete: if isAuthenticated() &&
                       resource.data.followerId == request.auth.uid;
    }

    // Likes collection
    match /likes/{likeId} {
      // Anyone can read likes
      allow read: if true;
      // Create if authenticated and userId matches current user
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      // Delete only own likes
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Global paint recipes collection
    match /paintRecipes/{recipeId} {
      // Anyone can read public recipes
      allow read: if true;
      // Only authenticated users can create recipes
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      // Only the owner can update their recipes, OR authenticated users can update counts
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) || (isAuthenticated() && isOnlyStatsUpdate());
      allow delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;

      // Recipe comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated() &&
                         request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() &&
                                 resource.data.userId == request.auth.uid;
      }
    }

    // Armies collection
    match /armies/{armyId} {
      // Read if army is public OR user is the owner
      allow read: if resource.data.isPublic == true ||
                     isOwner(resource.data.userId);
      // Only authenticated users can create armies
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      // Only the owner can update their army, OR authenticated users can update counts
      allow update: if isOwner(resource.data.userId) || (isAuthenticated() && isOnlyStatsUpdate());
      allow delete: if isOwner(resource.data.userId);

      // Army members subcollection
      match /members/{memberId} {
        // Read if parent army is public OR user is owner
        allow read: if get(/databases/$(database)/documents/armies/$(armyId)).data.isPublic == true ||
                       isOwner(get(/databases/$(database)/documents/armies/$(armyId)).data.userId);
        // Only army owner can write members
        allow write: if isOwner(get(/databases/$(database)/documents/armies/$(armyId)).data.userId);
      }

      // Army comments subcollection (for future Phase 2)
      match /comments/{commentId} {
        // Read if parent army is public
        allow read: if get(/databases/$(database)/documents/armies/$(armyId)).data.isPublic == true;
        // Create if authenticated and army is public
        allow create: if isAuthenticated() &&
                         get(/databases/$(database)/documents/armies/$(armyId)).data.isPublic == true &&
                         request.resource.data.userId == request.auth.uid;
        // Update/delete only own comments
        allow update, delete: if isAuthenticated() &&
                                 resource.data.userId == request.auth.uid;
      }
    }

    // Diary Entries (Paint Diary)
    match /diary_entries/{entryId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Site News (Admins only write, Everyone read)
    match /site_news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site Settings (Admins only write, Everyone read)
    match /site_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Badges (Admins write definitions, Everyone read definitions)
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
