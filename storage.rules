rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User profile photos
    match /users/{userId}/profile/{fileName} {
      // Anyone can read profile photos
      allow read: if true;
      // Only the user can write their own profile photo
      allow write: if request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*'); // Only images
    }

    // Project photos
    match /users/{userId}/projects/{projectId}/photos/{photoId}/{fileName} {
      // Anyone can read (assuming public projects, will check via Firestore rules)
      allow read: if true;
      // Only the user can write to their own project photos
      allow write: if request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*'); // Only images
      // Only the user can delete their own photos
      allow delete: if request.auth.uid == userId;
    }
  }
}
