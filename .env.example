# Firebase Configuration
# Get these values from Firebase Console: https://console.firebase.google.com
# Project Settings > General > Your apps > Firebase SDK snippet > Config

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PaintPile

# Optional: Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# AI API Keys - Multi-Key Setup with Feature Flag
# ============================================

# Feature Flag: Enable/disable 1min.ai key
# - true: Use MIN_API_KEY as primary (with failover to original keys)
# - false: Use original keys only (instant rollback)
USE_1MINAI_KEYS=false

# 1min.ai Lifetime License Key (Primary when USE_1MINAI_KEYS=true)
# Get this from your 1min.ai dashboard
# This key may work for both Anthropic and Replicate operations
MIN_API_KEY=sk-ant-api03-xxx

# Original API Keys (Backup/Fallback)
# These are used as:
# - Backups when USE_1MINAI_KEYS=true (automatic failover)
# - Primary keys when USE_1MINAI_KEYS=false (rollback)
ANTHROPIC_API_KEY=sk-ant-xxx      # From https://console.anthropic.com
REPLICATE_API_KEY=r8_xxx          # From https://replicate.com/account
